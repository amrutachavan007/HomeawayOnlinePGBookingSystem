@{
    ViewData["Title"] = "RegisterCustomer Page";
}
<div class="bg-container">
  <h1 class="p-4">Add New Owner</h1>
<form action="/Owner/AddOwner" method="Post">
    <div class="form-group row">
    <label for="oname" class="col-sm-2 col-form-label" style="font-weight:bold;font-size:20px;">Owner Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="oname" name="oname" placeholder="Enter owner name">
    </div>
  </div><br>
  <div class="form-group row">
    <label for="contactNo" class="col-sm-2 col-form-label" style="font-weight:bold;font-size:20px;" >Contact Details</label>
    <div class="col-sm-10">
      <input type="tel" class="form-control" id="contactNo" name="contactNo" pattern="[7-9]{1}[0-9]{9}" placeholder="Contact number">
    </div>
    </div><br>
    <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label" style="font-weight:bold;font-size:20px;">Owner Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" placeholder="Email" name="email">
    </div>
    </div><br>

  <div class="form-group row ">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary m-3" >Add</button>
    </div>
    <div class="col-sm-10">
      <a href="/Admin/Index">
    <button class="btn btn-primary">Back</button>
      </a>
    </div>
  </div>
</form>

<br>

</div>

