@using BOL;
@using System.Collections.Generic;
@{
    ViewData["Title"] = "Customer Details Page";
     <head>
    <link rel="stylesheet" href="~/css/theme.css"/>
</head>
}
<div class="bg-container">
<h1 class="p-4">Customer Details</h1>
<table border="2" class="table table-sm">
    <th>Customer Id</th>
    <th>Customer Name</th>
    <th>Customer Contact Number</th>
    <th>Customer Email</th>
    @{
        List<Customer> clist=ViewData["clist"] as List<Customer>;
            foreach(Customer c in clist){
                <tr>
                    <td>@c.CustomerId</td>
                    <td>@c.CustomerName</td>
                    <td>@c.CustomerContactNo</td>
                    <td>@c.CustomerEmail</td>
                   
                </tr>
            }
    }
</table>

<a href="/Admin/Index">
    <button class="btn btn-primary mt-4">Back</button>
</a>
</div>
