@using BOL;
@using System.Collections.Generic;
@{
    ViewData["Title"] = "Customer Details Page";
}

<h1>Customer</h1>
<table border="2">
    <th>Customer Id</th>
    <th>Customer Name</th>
    <th>Customer Contact Number</th>
    <th>Customer Email</th>
    <th>Customer Password</th>
    @{
        List<Customer> clist=ViewData["clist"] as List<Customer>;
            foreach(Customer c in clist){
                <tr>
                    <td>@c.CustomerId</td>
                    <td>@c.CustomerName</td>
                    <td>@c.CustomerContactNo</td>
                    <td>@c.CustomerEmail</td>
                    <td>@c.CustomerPassword</td>
                    <td>@Html.ActionLink("Edit","UpdateCustomer",new {CustomerId=c.CustomerId},null)</td>/
                    <td>@Html.ActionLink("Delete","DeleteCustomer",new {CustomerId=c.CustomerId},null)</td>
                </tr>
            }
    }
</table>
